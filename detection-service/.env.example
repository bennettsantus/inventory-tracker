# Anthropic API key (required) - get one at console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-...

# Claude model to use for vision analysis (default: Sonnet 4.5)
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# Max tokens for API response (must be > thinking budget)
ANTHROPIC_MAX_TOKENS=16000

# Token budget for extended thinking (higher = more careful counting, slower + more tokens)
ANTHROPIC_THINKING_BUDGET=10000

# Minimum confidence score (0.0-1.0) to include a detected item
CONFIDENCE_THRESHOLD=0.25

# Max image dimension in pixels before resizing (higher = better counting accuracy, more tokens)
MAX_IMAGE_SIZE=2048

# Max upload file size in megabytes
MAX_UPLOAD_MB=50

# Python logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Comma-separated list of allowed CORS origins (* = all)
ALLOWED_ORIGINS=*
